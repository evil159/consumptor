<?xml version="1.0" encoding="utf-8"?>
<manifest package="rol.metropolia.fi.consumptor"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_MODELS"
            android:value="rol.metropolia.fi.consumptor.Models.FuelEntry"/>

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="rol.metropolia.fi.consumptor"
            android:exported="false"/>

        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".FuelEntriesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".FuelEntryActivity">
        </activity>
    </application>

</manifest>